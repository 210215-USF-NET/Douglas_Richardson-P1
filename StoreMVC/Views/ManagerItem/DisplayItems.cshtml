@model IEnumerable<StoreMVC.Models.ManagerItemModel>
@{
    ViewData["Title"] = "Display Items";
}

<div class="text-center">
    <h2>Our Products</h2>

    <p>
        <a asp-action="Create">Create a new item.</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationName)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.LocationName)
                </td>
                <td>
                    @Html.ActionLink("Choose location", "ChooseLocation", new {Id = item.ItemId}) |
                    @Html.ActionLink("Edit", "EditItem", new { Id = item.ItemId }) |
                    @Html.ActionLink("Delete", "DeleteItem", new { Id = item.ItemId })
                </td>
            </tr>
            }
        }
        else
        {
            <tr><td>There are no items. </td></tr>
        }

    </tbody>
</table>