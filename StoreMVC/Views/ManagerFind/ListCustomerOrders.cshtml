@using StoreModels;
@model Tuple<List<OrderHistoryModel>, List<ItemModel>>
@{
    ViewData["Title"] = "User's Order History";
}

<div class="text-center">
    @if (Model?.Item1 != null)
    {
        <h3>@Html.DisplayFor(tuple => tuple.Item1.FirstOrDefault().Email)'s Order History</h3>
    }
    

    <p>
        <a asp-action="FindCustomerMenu">Go Back</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(tuple => tuple.Item1.FirstOrDefault().Email)
            </th>
            <th>
                @Html.DisplayNameFor(tuple => tuple.Item1.FirstOrDefault().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(tuple => tuple.Item1.FirstOrDefault().LastName)
            </th>
            <th>
                Item Info
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Item1 != null && Model.Item1.Any())
        {
            @foreach (var item in Model.Item1)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.LastName)
                </td>
                <td>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(tuple => tuple.Item2.FirstOrDefault().ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(tuple => tuple.Item2.FirstOrDefault().Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(tuple => tuple.Item2.FirstOrDefault().Quantity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(tuple => tuple.Item2.FirstOrDefault().Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(tuple => tuple.Item2.FirstOrDefault().LocationName)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Item2 != null && Model.Item2.Any())
                            {
                                @foreach (var element in Model.Item2)
                                {
                                    <td>
                                        @Html.DisplayFor(modelitem => element.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => element.Category)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(modelitem => element.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => element.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => element.Quantity)
                                    </td>
                                }
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
            }
        }
        else
        {
            <tr><td>There are no items. </td></tr>
        }

    </tbody>
</table>