@using StoreModels;
@model List<OrderHistoryModel>
@{
    ViewData["Title"] = "All Order Histories";
}

<div class="text-center">
    @if (Model != null)
    {
        <h3>All Order Histories</h3>
        <p>
            <a asp-controller="ManagerLocation" asp-action="ManagerLocations">Go Back</a>
        </p>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.FirstOrDefault().LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.FirstOrDefault().Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.LocationName)
                </td>
                <td>
                    $@Html.DisplayFor(modelitem => item.Total)
                 </td>
                <td>
                    @Html.ActionLink("Details", "DetailsOfOrder", new { orderId = item.Id, locationId = item.LocationId, email = item.Email })
                </td>
            </tr>
            }
        }
        else
        {
            <tr><td>There are no orders. </td></tr>
        }

    </tbody>
</table>