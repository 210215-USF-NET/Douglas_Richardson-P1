@model StoreMVC.Models.EditLocationModel
@{
    ViewData["Title"] = "Edit a Location";
}

<div class="text-center">
    <h2>Edit a location</h2>

    <hr />

</div>
<div class="row">
    <div class="col-md-4">
        @* Form tag helper. Doesn't really need a controller, since this view is already tied to the HeroController
            What it does need is an action to route to. basically what asp-action="Create" means is that, you submit this
            form to the herocontroller to the create action
        *@
        <form asp-action="EditLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* The tag helper label is tying the display property HeroName of a HeroIndexVM object
                *@
                <label asp-for="Name" class="control-label"></label>
                @* Using the input tag helper, the data type is tied to what kind of input type gets generated, this ties the
                    user input to a specific property in the object
                *@
                <input asp-for="Name" class="form-control" />
                @* This tag helper, ties the validation put in place for the HeroName property in the model *@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManagerLocations">Back to Locations</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}